<script>
function generateHTML() {
    var googleHandle = document.getElementById('google').value;
    var facebookHandle = document.getElementById('facebook').value;
    var yelpHandle = document.getElementById('yelp').value;
    var realtorHandle = document.getElementById('realtor').value;
    var zillowHandle = document.getElementById('zillow').value;
    var trustpilotHandle = document.getElementById('trustpilot').value;

    var numFilledFields = countFilledFields([googleHandle, facebookHandle, yelpHandle, realtorHandle, zillowHandle, trustpilotHandle]);
    var htmlCode = buildHTMLCode(googleHandle, facebookHandle, yelpHandle, realtorHandle, zillowHandle, trustpilotHandle, numFilledFields);

    document.getElementById('generatedCode').innerText = htmlCode;
    document.getElementById('generatedCode').style.display = 'block';
    document.getElementById('copyButton').style.display = 'block';
    document.getElementById('livePreview').innerHTML = htmlCode;
}

function generateReviewsUsHTML() {
    var googleHandle = document.getElementById('google').value;
    var facebookHandle = document.getElementById('facebook').value;
    var yelpHandle = document.getElementById('yelp').value;
    var realtorHandle = document.getElementById('realtor').value;
    var zillowHandle = document.getElementById('zillow').value;
    var trustpilotHandle = document.getElementById('trustpilot').value;

    var numFilledFields = countFilledFields([googleHandle, facebookHandle, yelpHandle, realtorHandle, zillowHandle, trustpilotHandle]);
    var htmlCode = buildReviewsUsHTMLCode(googleHandle, facebookHandle, yelpHandle, realtorHandle, zillowHandle, trustpilotHandle, numFilledFields);

    document.getElementById('generatedCode').innerText = htmlCode;
    document.getElementById('generatedCode').style.display = 'block';
    document.getElementById('copyButton').style.display = 'block';
    document.getElementById('livePreview').innerHTML = htmlCode;
}

function countFilledFields(fields) {
    return fields.reduce((count, field) => field ? count + 1 : count, 0);
}

function buildHTMLCode(google, facebook, yelp, realtor, zillow, trustpilot, numFilledFields) {
    var htmlCode = '<center><table>';
    if (numFilledFields >= 3) {
        if (google) htmlCode += addTableCellLong(google, "https://i.imgur.com/TPW62tt.png", 10, 600);
        if (facebook) htmlCode += addTableCellLong(facebook, "https://i.imgur.com/DaOlCND.png", 10, 600);
        if (yelp) htmlCode += addTableCellLong(yelp, "https://i.imgur.com/7QkaeoW.png", 10, 600);
        if (realtor) htmlCode += addTableCellLong(realtor, "https://i.imgur.com/JX7N4Ui.png", 10, 600);
        if (zillow) htmlCode += addTableCellLong(zillow, "https://i.imgur.com/5S997wx.png", 10, 600);
        if (trustpilot) htmlCode += addTableCellLong(trustpilot, "https://i.imgur.com/tsNmvqq.png", 10, 600);
    } else {
        if (google) htmlCode += addTableCell(google, "https://i.imgur.com/yhuVGUr.png", 10, 350);
        if (facebook) htmlCode += addTableCell(facebook, "https://i.imgur.com/dK2anim.png", 10, 350);
        if (yelp) htmlCode += addTableCell(yelp, "https://i.imgur.com/oKq39PH.png", 10, 350);
        if (realtor) htmlCode += addTableCell(realtor, "https://i.imgur.com/XDhpKBC.png", 10, 350);
        if (zillow) htmlCode += addTableCell(zillow, "https://i.imgur.com/yRCSnAq.png", 10, 350);
        if (trustpilot) htmlCode += addTableCell(trustpilot, "https://i.imgur.com/bqCAvY2.png", 10, 350);
    }
    htmlCode += '</table></center>';
    return htmlCode;
}

function buildReviewsUsHTMLCode(google, facebook, yelp, realtor, zillow, trustpilot, numFilledFields) {
    var htmlCode = '<center><table>';
     if (numFilledFields >= 3) {
        if (google) htmlCode += addTableCellLong(google, "https://i.imgur.com/FvCQmAN.png", 10, 600);
        if (facebook) htmlCode += addTableCellLong(facebook, "https://i.imgur.com/QfXZiPf.png", 10, 600);
        if (yelp) htmlCode += addTableCellLong(yelp, "https://i.imgur.com/Vfa3EMw.png", 10, 600);
        if (realtor) htmlCode += addTableCellLong(realtor, "https://i.imgur.com/qSgjAGM.png", 10, 600);
        if (zillow) htmlCode += addTableCellLong(zillow, "https://i.imgur.com/sgzZHIZ.png", 10, 600);
        if (trustpilot) htmlCode += addTableCellLong(trustpilot, "https://i.imgur.com/H3PKeP6.png", 10, 600);
    } else {
        if (google) htmlCode += addTableCell(google, "https://i.imgur.com/5mCzN9O.png", 10, 350);
        if (facebook) htmlCode += addTableCell(facebook, "https://i.imgur.com/tuN96vG.png", 10, 350);
        if (yelp) htmlCode += addTableCell(yelp, "https://i.imgur.com/xZQ5sh0.png", 10, 350);
        if (realtor) htmlCode += addTableCell(realtor, "https://i.imgur.com/HGqi4y2.png", 10, 350);
        if (zillow) htmlCode += addTableCell(zillow, "https://i.imgur.com/jpn8ja0.png", 10, 350);
        if (trustpilot) htmlCode += addTableCell(trustpilot, "https://i.imgur.com/PjJdRj1.png", 10, 350);
    }
    htmlCode += '</table></center>';
    return htmlCode;
}

function addTableCellLong(link, image, padding, width) {
    return `<tr><td style="padding: ${padding}px"><a href="${link}" target="_blank"><img src="${image}" style="width: ${width}px;"></a></td></tr>`;
}

function addTableCell(link, image, padding, width) {
    return `<td style="padding: ${padding}px"><a href="${link}" target="_blank"><img src="${image}" style="width: ${width}px;"></a></td>`;
}

function clearFields() {
    document.getElementById('google').value = "";
    document.getElementById('facebook').value = "";
    document.getElementById('yelp').value = "";
    document.getElementById('realtor').value = "";
    document.getElementById('zillow').value = "";
    document.getElementById('trustpilot').value = "";
    document.getElementById('generatedCode').innerText = "";
    document.getElementById('livePreview').innerHTML = "";
}

document.getElementById('copyButton').addEventListener('click', function() {
    var codeToCopy = document.getElementById('generatedCode').innerText;
    navigator.clipboard.writeText(codeToCopy).then(function() {
        alert('Code copied to clipboard!');
    }, function(err) {
        console.error('Could not copy text: ', err);
    });
});
</script>
</body>
